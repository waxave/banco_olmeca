<div class="grid grid-cols-4 gap-4">
  <div>
    <!-- Balance -->
    <%= render partial: "application/balance", locals: { balance: @current_user.balance } %>

    <!-- Cards -->
    <%= render partial: "application/card", collection: @current_user.cards, as: :card %>
  </div>

  <div class="col-span-3">
    <div class="bg-white p-8 rounded-md w-full">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-xl font-['Raleway'] text-gray-900 font-bold">
          <%= t('operations.title') %>
        </h1>
        <div class="text-sm text-gray-600">
          <%= t('operations.total_operations', count: @operations.count) %>
        </div>
      </div>

      <!-- Lista de operaciones -->
      <% if @operations.any? %>
        <%= render partial: "operations/operations", locals: { operations: @operations } %>
      <% else %>
        <div class="text-center py-8 text-gray-600">
          <p class="text-lg"><%= t('operations.no_operations') %></p>
          <p class="text-sm mt-2"><%= t('operations.no_operations_message') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
