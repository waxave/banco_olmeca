<div class="font-['Roboto'] grid grid-cols-10 gap-0 items-center bg-[#7bdce4] p-6 gap-8 rounded-lg border-2 border-[#7bdce4] mb-5">
  <div class="col-span-1">
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-receipt-2" width="50" height="50" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16l-3 -2l-2 2l-2 -2l-2 2l-2 -2l-3 2"></path>
      <path d="M14 8h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5m2 0v1.5m0 -9v1.5"></path>
    </svg>
  </div>
  <div class="col-span-7">
    <p class="text-left text-lg text-[#1A5B61] font-bold">
      <%= operation.kind.titleize %>:
      <%= operation.concept %>
      - [<%= number_to_currency(operation.amount, unit: '$', precision: 2, delimiter: '.', separator: ',') %>]
    </p>
  </div>
  <div class="col-span-2">
    <p class="text-center text-xl text-[#1A5B61] font-bold">
      <%= operation.created_at.to_formatted_s(:short)  %>
    </p>
  </div>
</div>
