<div id="<%= dom_id(operation) %>" class="font-['Roboto'] bg-[#fd938b] border-[#fd938b] grid grid-cols-10 gap-0 items-center p-6 gap-8 rounded-lg border-2 mb-5">
  <div class="col-span-1">
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-receipt-off" width="50" height="50" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M5 21v-16m2 -2h10a2 2 0 0 1 2 2v10m0 4.01v1.99l-3 -2l-2 2l-2 -2l-2 2l-2 -2l-3 2"></path>
      <path d="M11 7l4 0"></path>
      <path d="M9 11l2 0"></path>
      <path d="M13 15l2 0"></path>
      <path d="M15 11l0 .01"></path>
      <path d="M3 3l18 18"></path>
    </svg>
  </div>
  <div class="col-span-6">
    <p class="text-left text-lg text-[#774842] font-bold">
      <%= t('operations.withdrawal', concept: operation.concept) %>
    </p>
    <p class="text-sm text-[#774842] mt-1">
      <%= operation_target_info(operation) %>
    </p>
  </div>
  <div class="col-span-3 text-right">
      <p class="text-2xl font-bold text-[#774842]">
        -<%= number_to_currency(operation.amount, unit: '$', precision: 2, delimiter: '.', separator: ',') %>
      </p>
      <p class="text-sm text-gray-600 mt-1">
        <%= format_operation_date(operation.created_at) %>
      </p>
  </div>
</div>
