<div class="font-['Roboto'] bg-[#43a4ab] border-[#43a4ab] grid grid-cols-10 gap-0 items-center p-6 gap-8 rounded-lg border-2 mb-5">
  <div class="col-span-1">
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-receipt-2" width="50" height="50" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16l-3 -2l-2 2l-2 -2l-2 2l-2 -2l-3 2"></path>
      <path d="M14 8h-2.5a1.5 1.5 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5m2 0v1.5m0 -9v1.5"></path>
    </svg>
  </div>
  <div class="col-span-6">
    <p class="text-left text-lg text-[#1A5B61] font-bold">
      <%= t('operations.deposit', concept: operation.concept) %>
    </p>
    <p class="text-sm text-[#1A5B61] mt-1">
      <%= operation_target_info(operation) %>
    </p>
  </div>
  <div class="col-span-3 text-right">
      <p class="text-2xl font-bold text-[#1A5B61]">
        +<%= number_to_currency(operation.amount, unit: '$', precision: 2, delimiter: '.', separator: ',') %>
      </p>
      <p class="text-sm text-gray-600 mt-1">
        <%= format_operation_date(operation.created_at) %>
      </p>
  </div>
</div>
